extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  comments:
    require-starting-space: false
  line-length: disable
  truthy: disable

ignore: |
  *etc/kayobe/environments/ci-multinode/secrets.yml
  .automation/
  releasenotes/
  .github/
  .gitlab/
  .gitlab-ci.yml
  etc/kayobe/kolla/config/prometheus/prometheus.yml.d/70-oscapacity.yml
