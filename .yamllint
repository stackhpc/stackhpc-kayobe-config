extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  comments:
    require-starting-space: false
  line-length: disable
  truthy: disable

ignore: |
  *etc/kayobe/environments/ci-multinode/secrets.yml
  *etc/kayobe/environments/ci-multinode/kolla/globals-tls-config.yml
  *.automation/
  *releasenotes/
  *.github/
  *.gitlab/
  *.gitlab-ci.yml
